<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:background="@color/orange_200"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/search_view_bg"
        android:searchIcon="@drawable/search"
        android:id="@+id/SearchBar"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/view_pager_background"
                    tools:ignore="SpeakableTextPresentCheck" />
            </RelativeLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:id="@+id/Home_cards">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="2dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="300dp"
                        android:layout_height="150dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_margin="6dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Summer Offers"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginStart="10dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Get best deals ever on\nsummer collection in our store"
                                    android:textSize="15sp"
                                    android:layout_marginTop="14dp"
                                    android:layout_marginStart="10dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Shop now"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:background="@color/peach"
                                    android:textColor="@color/white"
                                    android:paddingVertical="6dp"
                                    android:paddingHorizontal="10dp"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginStart="10dp"/>
                            </LinearLayout>
                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@color/peach"
                                android:layout_gravity="center"
                                android:contentDescription="summer deals"
                                android:layout_marginHorizontal="10dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="300dp"
                        android:layout_height="150dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_margin="6dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Get discounts on fashion day"
                                    android:textSize="15sp"
                                    android:layout_marginTop="14dp"
                                    android:layout_marginStart="10dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Up to 50% off"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginStart="10dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Get now"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:background="@color/peach"
                                    android:textColor="@color/white"
                                    android:paddingVertical="6dp"
                                    android:paddingHorizontal="10dp"
                                    android:layout_marginTop="34dp"
                                    android:layout_marginStart="10dp"/>
                            </LinearLayout>
                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@color/peach"
                                android:layout_gravity="center"
                                android:contentDescription="summer deals"
                                android:layout_marginHorizontal="10dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="300dp"
                        android:layout_height="150dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_margin="6dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Special offers"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginStart="10dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Attractive discounts\non biggest sale ever"
                                    android:textSize="15sp"
                                    android:layout_marginTop="14dp"
                                    android:layout_marginStart="10dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Shop now"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:background="@color/peach"
                                    android:textColor="@color/white"
                                    android:paddingVertical="6dp"
                                    android:paddingHorizontal="10dp"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginStart="10dp"/>
                            </LinearLayout>
                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@color/peach"
                                android:layout_gravity="center"
                                android:contentDescription="summer deals"
                                android:layout_marginHorizontal="10dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:id="@+id/Category_cards">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="6dp">
                    <Button
                        android:id="@+id/New"
                        android:layout_width="100dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_button_background"
                        android:text="New"
                        android:textSize="12sp"
                        android:paddingVertical="8dp"
                        android:layout_marginHorizontal="10dp"
                        android:textStyle="bold"/>
                    <Button
                        android:id="@+id/Trending"
                        android:layout_width="100dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_button_background"
                        android:text="Trending"
                        android:textSize="12sp"
                        android:paddingVertical="8dp"
                        android:layout_marginHorizontal="10dp"
                        android:textStyle="bold"/>
                    <Button
                        android:id="@+id/Sale"
                        android:layout_width="100dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_button_background"
                        android:text="Sale"
                        android:textSize="12sp"
                        android:paddingVertical="8dp"
                        android:layout_marginHorizontal="10dp"
                        android:textStyle="bold"/>
                    <Button
                        android:id="@+id/Popular"
                        android:layout_width="100dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_button_background"
                        android:text="Popular"
                        android:textSize="12sp"
                        android:paddingVertical="8dp"
                        android:layout_marginHorizontal="10dp"
                        android:textStyle="bold"/>
                    <Button
                        android:id="@+id/Best"
                        android:layout_width="120dp"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_button_background"
                        android:text="Best seller"
                        android:textSize="12sp"
                        android:paddingVertical="8dp"
                        android:layout_marginHorizontal="10dp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </HorizontalScrollView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>